@{
    ViewData["Title"] = "Cargar Ventas (CSV)";
}

<div class="container py-4">
    <div class="d-flex align-items-center gap-2 mb-3">
        <i class="bi bi-file-earmark-spreadsheet fs-4 text-success"></i>
        <h2 class="mb-0">Cargar archivo de Ventas</h2>
    </div>

    @if (TempData["Err"] is string err)
    {
        <div class="alert alert-danger"><i class="bi bi-exclamation-triangle me-2"></i>@err</div>
    }

    <div class="card shadow-sm border-0" style="border-radius:16px;">
        <div class="card-body p-4">
            <form asp-action="Index" method="post" enctype="multipart/form-data" id="formUpload">
                <div class="row g-4">
                    <div class="col-12 col-lg-7">
                        <div id="dropzone" class="dropzone p-4 text-center">
                            <input id="fileInput" class="visually-hidden" type="file" name="archivo" accept=".csv" required />
                            <div class="dz-icon text-success mb-2"><i class="bi bi-cloud-arrow-up fs-1"></i></div>
                            <div class="dz-title fw-semibold">Arrastra tu archivo CSV aquí</div>
                            <div class="text-muted small">o haz clic para seleccionar desde tu equipo</div>
                            <div id="fileInfo" class="mt-3 small d-none"></div>
                        </div>
                    </div>

                    <div class="col-12 col-lg-5">
                        <div class="p-3 rounded-3 bg-light">
                            <div class="d-flex align-items-center mb-2">
                                <i class="bi bi-info-circle me-2 text-secondary"></i>
                                <strong>Requisitos del CSV</strong>
                            </div>
                            <ul class="small mb-2 ps-3">
                                <li>Delimitador: <b>coma</b> o <b>punto y coma</b>.</li>
                                <li>Una fila = <b>un detalle</b> de venta.</li>
                                <li>La columna <code>Pagos</code> acepta formato <code>Metodo:Monto</code> separados por <code>|</code>.</li>
                            </ul>

                            <div class="mb-2"><strong>Encabezados sugeridos</strong></div>
                            <pre class="small bg-white border rounded p-2 mb-3">Numero,Fecha,AlmacenCodigo,AlmacenNombre,ClienteIdentificacion,ClienteNombre,EmpleadoUsuarioId,EmpleadoNombre,ProductoCodigo,ProductoNombre,Categoria,Cantidad,PrecioUnitario,Descuento,Subtotal,Pagos</pre>

                            <button type="button" id="btnPlantilla" class="btn btn-outline-secondary btn-sm">
                                <i class="bi bi-download me-1"></i> Descargar plantilla CSV
                            </button>
                        </div>
                    </div>
                </div>

                <div class="mt-4 d-flex gap-2">
                    <button id="btnSubir" class="btn btn-success">
                        <i class="bi bi-upload me-1"></i> Subir y procesar
                    </button>
                    @Html.AntiForgeryToken()
                </div>
            </form>
        </div>
    </div>

    <div class="d-none mt-4" id="otrosFormatos">
        <div class="accordion" id="accOtros">
            <div class="accordion-item">
                <h2 class="accordion-header" id="hJson">
                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#cJson">
                        Ejemplo JSON
                    </button>
                </h2>
                <div id="cJson" class="accordion-collapse collapse" data-bs-parent="#accOtros">
<pre class="bg-light p-2 small m-0">
{ ... JSON de ejemplo ... }
</pre>
                </div>
            </div>
            <div class="accordion-item">
                <h2 class="accordion-header" id="hXml">
                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#cXml">
                        Ejemplo XML
                    </button>
                </h2>
                <div id="cXml" class="accordion-collapse collapse" data-bs-parent="#accOtros">
<pre class="bg-light p-2 small m-0">
&lt;ArchivoVentas&gt; ... &lt;/ArchivoVentas&gt;
</pre>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="~/css/uploads.css" asp-append-version="true" />
}
@section Scripts {
    <script src="~/js/uploads.js" asp-append-version="true"></script>
}
