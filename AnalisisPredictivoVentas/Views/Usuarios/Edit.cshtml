@model AnalisisPredictivoVentas.Models.Usuario
@using AnalisisPredictivoVentas.Models
@{
    ViewData["Title"] = "Editar usuario";
}
<h2 class="mb-3">@ViewData["Title"]</h2>

<form method="post" class="card card-body shadow-sm">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="row g-3">
        <div class="col-md-6">
            <label class="form-label">Email</label>
            <input asp-for="Email" class="form-control" readonly />
        </div>

        <div class="col-md-6">
            <label class="form-label">Nombres</label>
            <input asp-for="Nombres" class="form-control" />
            <span asp-validation-for="Nombres" class="text-danger"></span>
        </div>

        <div class="col-md-4">
            <label class="form-label">Rol</label>
            <select asp-for="Rol" class="form-select">
                <option value="@Roles.Administrador">Administrador</option>
                <option value="@Roles.ResponsableCarga">ResponsableCarga</option>
                <option value="@Roles.Empleado">Empleado</option>
            </select>
            <span asp-validation-for="Rol" class="text-danger"></span>
        </div>

        <div class="col-md-4">
            <label class="form-label">Nueva contraseña (opcional)</label>
            <input name="newPassword" type="password" class="form-control" />
            <small class="text-muted">Déjalo vacío para mantener la actual. (≥8, 1 mayúscula y 1 número)</small>
        </div>

        <div class="col-md-4 d-flex align-items-center">
            <div class="form-check mt-4">
                <input asp-for="Activo" class="form-check-input" />
                <label class="form-check-label" asp-for="Activo">Activo</label>
            </div>
        </div>
    </div>

    <div class="mt-3 d-flex gap-2">
        <button class="btn btn-primary"><i class="bi bi-save me-1"></i>Guardar</button>
        <a class="btn btn-secondary" asp-action="Index">Volver</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
