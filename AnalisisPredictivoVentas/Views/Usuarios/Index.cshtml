@model IEnumerable<AnalisisPredictivoVentas.Models.Usuario>
@using AnalisisPredictivoVentas.Models
@{
    ViewData["Title"] = "Usuarios";
}

<div class="d-flex align-items-center justify-content-between mb-3">
    <h2 class="mb-0">@ViewData["Title"]</h2>
    <a class="btn btn-primary" asp-action="Create">
        <i class="bi bi-person-plus me-1"></i> Nuevo usuario
    </a>
</div>

<div class="table-responsive">
    <table class="table table-hover align-middle">
        <thead class="table-light">
            <tr>
                <th>Email</th>
                <th>Nombres</th>
                <th>Rol</th>
                <th class="text-center">Estado</th>
                <th style="width:160px;"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var u in Model)
            {
                <tr>
                    <td>@u.Email</td>
                    <td>@u.Nombres</td>
                    <td>
                        @if (u.Rol == Roles.Administrador)
                        {
                            <span class="badge text-bg-danger">Administrador</span>
                        }
                        else if (u.Rol == Roles.ResponsableCarga)
                        {

                            <span class="badge text-bg-info">ResponsableCarga</span>
                        }
                        else
                        {

                            <span class="badge text-bg-secondary">Empleado</span>
                        }
                    </td>
                    <td class="text-center">
                        @if (u.Activo)
                        {
                            <span class="badge text-bg-success">Activo</span>
                        }
                        else
                        {

                            <span class="badge text-bg-secondary">Inactivo</span>
                        }
                    </td>
                    <td class="text-end">
                        <a class="btn btn-sm btn-outline-primary" asp-action="Edit" asp-route-id="@u.Id">
                            <i class="bi bi-pencil-square"></i>
                        </a>
                        <form asp-action="ToggleActivo" asp-route-id="@u.Id" method="post" class="d-inline">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-sm @(u.Activo ? "btn-outline-warning" : "btn-outline-success")"
                                    title="@(u.Activo ? "Desactivar" : "Activar")"
                                    onclick="return confirm('¿Confirmas cambiar el estado de @u.Email?');">
                                <i class="bi @(u.Activo ? "bi-person-dash" : "bi-person-check")"></i>
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
