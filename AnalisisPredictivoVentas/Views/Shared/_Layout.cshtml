@{
    var ctrl = ViewContext.RouteData.Values["controller"]?.ToString();
    var pathWithQuery = (Context?.Request?.Path + Context?.Request?.QueryString).ToString();
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@(ViewData["Title"] ?? "Analisis Predictivo de Ventas")</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    @RenderSection("Styles", required: false)
</head>
<body>
    <!-- TOPBAR -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand fw-bold" asp-controller="Home" asp-action="Index">AnalisisPredictivoVentas</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#topbar">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div id="topbar" class="collapse navbar-collapse justify-content-end">
                <ul class="navbar-nav">
                    @if (User.Identity?.IsAuthenticated ?? false)
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" data-bs-toggle="dropdown">@User.Identity!.Name</a>
                            <ul class="dropdown-menu dropdown-menu-end">
                                <li><a class="dropdown-item" asp-controller="Home" asp-action="Index">Inicio</a></li>
                                <li><hr class="dropdown-divider" /></li>
                                <li>
                                    <form asp-controller="Account" asp-action="Logout" method="post" class="px-3 py-1">
                                        <button type="submit" class="btn btn-sm btn-outline-danger w-100">Cerrar sesión</button>
                                    </form>
                                </li>
                            </ul>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Account" asp-action="Login"
                               asp-route-returnUrl="@pathWithQuery">Iniciar sesión</a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <!-- WRAPPER -->
    <div class="d-flex" style="min-height: calc(100vh - 56px);">
        <!-- SIDEBAR -->
        <aside class="p-3 text-white" style="width:260px;background:#343a40;">
            <div class="small text-uppercase text-secondary mb-2">Menú</div>
            <a class="d-block py-2 text-decoration-none @(ctrl == "Home" ? "fw-semibold text-white" : "text-light")"
               asp-controller="Home" asp-action="Index">🏠 Inicio</a>
            <a class="d-block py-2 text-decoration-none @(ctrl == "Dashboard" ? "fw-semibold text-white" : "text-light")"
               asp-controller="Dashboard" asp-action="Index">📊 Dashboard</a>

            @if (User.IsInRole("Administrador") || User.IsInRole("ResponsableCarga"))
            {
                <a class="d-block py-2 text-decoration-none @(ctrl == "Uploads" ? "fw-semibold text-white" : "text-light")"
                   asp-controller="Uploads" asp-action="Index">☁️ Cargas</a>
            }
            @if (User.IsInRole("Administrador"))
            {
                <a class="d-block py-2 text-decoration-none @(ctrl == "Usuarios" ? "fw-semibold text-white" : "text-light")"
                   asp-controller="Usuarios" asp-action="Index">👥 Usuarios</a>
                <a class="d-block py-2 text-decoration-none @(ctrl == "Configuraciones" ? "fw-semibold text-white" : "text-light")"
                   asp-controller="Configuraciones" asp-action="Index">⚙️ Configuración</a>
            }
        </aside>

        <!-- MAIN -->
        <main class="flex-grow-1 p-4" style="background:#f8f9fa;">
            @* 🔵 OBLIGATORIO: RenderBody fuera de condicionales *@
            @RenderBody()

            @RenderSection("Modals", required: false)
            @RenderSection("Scripts", required: false)
        </main>
    </div>

    <footer class="text-center text-muted py-3" style="background:#212529;color:#adb5bd;">
        &copy; @DateTime.Now.Year AnalisisPredictivoVentas
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
