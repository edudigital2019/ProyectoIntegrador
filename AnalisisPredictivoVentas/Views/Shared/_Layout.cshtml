@{
    var ctrl = ViewContext.RouteData.Values["controller"]?.ToString();
    var act = ViewContext.RouteData.Values["action"]?.ToString();
    var pathWithQuery = (Context?.Request?.Path + Context?.Request?.QueryString).ToString();
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@(ViewData["Title"] ?? "Análisis Predictivo de Ventas")</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" rel="stylesheet" />

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/layout-modern.css" asp-append-version="true" />

    @RenderSection("Styles", required: false)
</head>
<body class="layout-body">

    <nav class="navbar navbar-expand-lg navbar-dark navbar-glass">
        <div class="container-fluid">
            <button class="btn btn-icon me-2 d-lg-none" id="btnSidebarToggleMobile" aria-label="Abrir menú">
                <i class="bi bi-list"></i>
            </button>

            <a class="navbar-brand fw-bold" asp-controller="Home" asp-action="Index">
                <i class="bi bi-graph-up-arrow me-1"></i> Analítica de Ventas
            </a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#topbar">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div id="topbar" class="collapse navbar-collapse justify-content-end">
                <ul class="navbar-nav align-items-center gap-2">
                    <li class="nav-item d-none d-lg-block">
                        <button class="btn btn-outline-light btn-sm" id="btnSidebarToggle" title="Colapsar menú">
                            <i class="bi bi-layout-sidebar-inset"></i>
                        </button>
                    </li>

                    @if (User.Identity?.IsAuthenticated ?? false)
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" data-bs-toggle="dropdown">
                                <i class="bi bi-person-circle me-2"></i>@User.Identity!.Name
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end shadow-sm">
                                <li><a class="dropdown-item" asp-controller="Home" asp-action="Index"><i class="bi bi-house-door me-2"></i>Inicio</a></li>
                                <li><hr class="dropdown-divider" /></li>
                                <li>
                                    <form asp-controller="Account" asp-action="Logout" method="post" class="px-3 py-1">
                                        <button type="submit" class="btn btn-sm btn-outline-danger w-100">
                                            <i class="bi bi-box-arrow-right me-1"></i> Cerrar sesión
                                        </button>
                                    </form>
                                </li>
                            </ul>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="btn btn-outline-light btn-sm" asp-controller="Account" asp-action="Login"
                               asp-route-returnUrl="@pathWithQuery">
                                <i class="bi bi-box-arrow-in-right me-1"></i> Iniciar sesión
                            </a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <div class="layout-wrapper">

        <aside id="sidebar" class="sidebar">
            <div class="sidebar-header">
                <span class="sidebar-title">Menú</span>
            </div>

            <nav class="nav flex-column sidebar-nav">
                <a class="nav-link @(ctrl == "Home" ? "active" : "")"
                   asp-controller="Home" asp-action="Index">
                    <i class="bi bi-house-door"></i><span>Inicio</span>
                </a>

                <a class="nav-link @(ctrl == "Sales" && (act == "Index" || string.IsNullOrEmpty(act)) ? "active" : "")"
                   asp-controller="Sales" asp-action="Index">
                    <i class="bi bi-activity"></i><span>Tendencias</span>
                </a>

                <div class="sidebar-sep"></div>
                <div class="sidebar-section">Reportes</div>

                <a class="nav-link @(ctrl == "Sales" && act == "General" ? "active" : "")"
                   asp-controller="Sales" asp-action="General">
                    <i class="bi bi-bar-chart-steps"></i><span>Análisis general</span>
                </a>

                <a class="nav-link @(ctrl == "Sales" && act == "Productos" ? "active" : "")"
                   asp-controller="Sales" asp-action="Productos">
                    <i class="bi bi-basket3"></i><span>Top productos</span>
                </a>

                <a class="nav-link @(ctrl == "Sales" && act == "Vendedores" ? "active" : "")"
                   asp-controller="Sales" asp-action="Vendedores">
                    <i class="bi bi-person-badge"></i><span>Top vendedores</span>
                </a>

                <a class="nav-link @(ctrl == "Sales" && act == "Pagos" ? "active" : "")"
                   asp-controller="Sales" asp-action="Pagos">
                    <i class="bi bi-credit-card-2-front"></i><span>Métodos de pago</span>
                </a>

                <a class="nav-link @(ctrl == "Sales" && act == "Genero" ? "active" : "")"
                   asp-controller="Sales" asp-action="Genero">
                    <i class="bi bi-people"></i><span>Ventas por género</span>
                </a>

                @if (User.IsInRole("Administrador") || User.IsInRole("ResponsableCarga"))
                {
                    <div class="sidebar-sep"></div>
                    <div class="sidebar-section">Operación</div>

                    <a class="nav-link @(ctrl == "Uploads" ? "active" : "")"
                       asp-controller="Uploads" asp-action="Index">
                        <i class="bi bi-cloud-upload"></i><span>Cargas</span>
                    </a>
                }
                @if (User.IsInRole("Administrador"))
                {
                    <a class="nav-link @(ctrl == "Usuarios" ? "active" : "")"
                       asp-controller="Usuarios" asp-action="Index">
                        <i class="bi bi-people-gear"></i><span>Usuarios</span>
                    </a>

                    <a class="nav-link @(ctrl == "Configuraciones" ? "active" : "")"
                       asp-controller="Configuraciones" asp-action="Index">
                        <i class="bi bi-gear"></i><span>Configuración</span>
                    </a>
                }
            </nav>
        </aside>
        <main class="main">
            <div class="container-fluid py-4">
                @RenderBody()
                @RenderSection("Modals", required: false)
            </div>
        </main>
    </div>

    <footer class="layout-footer footer-wave" role="contentinfo">
        <div class="container-fluid text-center small d-flex justify-content-center align-items-center gap-2">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" aria-hidden="true">
                <path d="M4 18h16" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" />
                <path d="M6 16l4-6 4 4 5-8" stroke="currentColor" stroke-width="1.5"
                      stroke-linecap="round" stroke-linejoin="round" />
            </svg>
            <span class="fw-medium">Datos claros. Decisiones seguras.</span>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" defer></script>

    @if (ctrl == "Sales")
    {
        <script src="https://code.highcharts.com/highcharts.js" defer></script>
        <script src="https://code.highcharts.com/modules/exporting.js" defer></script>
        <script src="https://code.highcharts.com/modules/offline-exporting.js" defer></script>
        <script src="https://code.highcharts.com/modules/accessibility.js" defer></script>
        <script src="https://code.highcharts.com/modules/heatmap.js" defer></script>
        <script src="~/js/highcharts-theme.js" asp-append-version="true" defer></script>
    }

    @RenderSection("Scripts", required: false)

    <script>
        (function () {
            const body = document.body;
            const sidebar = document.getElementById('sidebar');
            const btnDesktop = document.getElementById('btnSidebarToggle');
            const btnMobile = document.getElementById('btnSidebarToggleMobile');
            const KEY = 'layout.sidebar.collapsed';

            function applyState(collapsed) {
                body.classList.toggle('sidebar-collapsed', collapsed);
            }
            const saved = localStorage.getItem(KEY);
            applyState(saved === '1');

            function toggle() {
                const isCollapsed = body.classList.toggle('sidebar-collapsed');
                localStorage.setItem(KEY, isCollapsed ? '1' : '0');
            }

            btnDesktop?.addEventListener('click', toggle);
            btnMobile?.addEventListener('click', toggle);
        })();
    </script>
</body>
</html>
