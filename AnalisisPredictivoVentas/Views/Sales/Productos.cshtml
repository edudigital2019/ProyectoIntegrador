@{
    ViewData["Title"] = "Top productos";
}

<h2>@ViewData["Title"]</h2>

<div class="row g-3 mb-3 sales-filters">
    <div class="col-lg-4">
        <label class="form-label">Almacén</label>
        <div class="dropdown w-100">
            <button id="almacenDropdownBtn" class="btn btn-outline-secondary w-100 text-start"
                    data-bs-toggle="dropdown" aria-expanded="false">
                <span id="almacenSummary">Todos</span>
            </button>
            <div class="dropdown-menu p-3 w-100" style="max-height: 320px; overflow:auto;">
                <input id="almacenFilter" type="text" class="form-control mb-2" placeholder="Buscar almacén..." />
                <div class="form-check mb-2">
                    <input class="form-check-input" type="checkbox" id="almacenAll" checked>
                    <label class="form-check-label" for="almacenAll">Seleccionar todos</label>
                </div>
                <div id="almacenChecks" class="d-grid gap-2"></div>
            </div>
        </div>
    </div>

    <div class="col-lg-2">
        <label class="form-label">Top N</label>
        <input id="topN" type="number" class="form-control" value="10" min="1" max="50" />
    </div>

    <div class="col-lg-2">
        <label class="form-label">Año</label>
        <input id="year" type="number" class="form-control" value="@DateTime.Now.Year" min="2000" max="2100" />
    </div>

    <div class="col-lg-2">
        <label class="form-label">Mes</label>
        <select id="month" class="form-select">
            <option value="">Todos</option>
            <option value="1">Enero</option>
            <option value="2">Febrero</option>
            <option value="3">Marzo</option>
            <option value="4">Abril</option>
            <option value="5">Mayo</option>
            <option value="6">Junio</option>
            <option value="7">Julio</option>
            <option value="8">Agosto</option>
            <option value="9">Septiembre</option>
            <option value="10">Octubre</option>
            <option value="11">Noviembre</option>
            <option value="12">Diciembre</option>
        </select>
    </div>

    <div class="col-lg-1 d-flex align-items-end">
        <button id="btnAplicar" class="btn btn-primary w-100">Aplicar</button>
    </div>
    <div class="col-lg-1 d-flex align-items-end">
        <button id="btnLimpiar" class="btn btn-outline-secondary w-100">Limpiar</button>
    </div>
</div>

<div id="filtersSummary" class="small text-muted mb-2"></div>

<div id="chartTopProductos" style="height: 480px;" class="mb-4 position-relative">
    <div id="chartSpinner" class="position-absolute top-50 start-50 translate-middle" style="display:none;">
        <div class="spinner-border" role="status" aria-hidden="true"></div>
    </div>
</div>

@section Scripts {
    <script>
        window.API_CHARTS_BASE = '@Url.Content("~/api/charts")';

        document.addEventListener('DOMContentLoaded', () => {
            const sel = document.getElementById('month');
            if (sel && !sel.value) sel.value = String(new Date().getMonth() + 1);
        });
    </script>
    <script src="~/js/sales-top.js" asp-append-version="true"></script>
}
